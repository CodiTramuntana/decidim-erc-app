<% fully_endorsed= fully_endorsed?(@proposal, current_user) %>
<div class="row collapse buttons__row">
  <% if endorsements_enabled? %>
    <% if @proposal.emendation? && manageable_user_groups.empty? %>
      <!-- This is to avoid the nested div.button-group -->
      <div class="column collapse small-6" id="endorsements-count-only">
        <%= render_endorsements_count_card_part(@proposal, fully_endorsed, endorsements_count_only_classes) %>
      </div>
      <!-- /This is to avoid the nested div.button-group -->
    <% else %>
      <div class="column collapse small-9">
        <div class="button-group button-group--collapse button--nomargin small">
          <%= render_endorsements_count_card_part(@proposal, fully_endorsed) %>
          <%= render_endorsements_button_card_part(@proposal, fully_endorsed) %>
        </div>
      </div>
    <% end %>
  <% end %>
  <div class="column collapse <%= comment_button_column_size %>">
    <%= link_to "#comments", class: "button small compact hollow secondary button--nomargin expanded" do %>
      <%= icon "comment-square", class: "icon--small", aria_label: t(".comments"), role: "img" %>
      <%= @proposal.comments.count %>
    <% end %>
  </div>
</div>
